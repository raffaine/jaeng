# top-most EditorConfig file
root = true

# Default
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4
tab_width = 4
trim_trailing_whitespace = true

# C/C++
[*.{c,cc,cxx,cpp,h,hpp,inl}]
indent_style = space
indent_size = 4
tab_width = 4

# CMake
[*.{cmake,CMakeLists.txt}]
indent_style = space
indent_size = 2
tab_width = 2
