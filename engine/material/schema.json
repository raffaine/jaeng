{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "MaterialDefinition",
  "type": "object",
  "properties": {
    "name": { "type": "string" },
    "shader": { "type": "string" },
    "textures": {
      "type": "array",
      "items": { "type": "string" }
    },
    "parameters": {
      "type": "object",
      "properties": {
        "color": {
          "type": "array",
          "items": { "type": "number" },
          "minItems": 4,
          "maxItems": 4
        },
        "roughness": { "type": "number" },
        "metallic": { "type": "number" }
      },
      "additionalProperties": false
    }
  },
  "required": ["name", "shader"],
  "additionalProperties": false
}
